<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
<modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.draagon</groupId>
        <artifactId>metaobjects</artifactId>
        <version>4.3.0-SNAPSHOT</version>
    </parent>
  
    <artifactId>metaobjects-core</artifactId>
    <packaging>bundle</packaging>

    <name>MetaObjects :: Core</name>
    <url>https://github.com/Draagon/draagon-metaobjects</url>
    <description>MetaObjects for Model-driven development - Core Libraries</description>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${jar.plugin.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>test-jar</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>com.draagon</groupId>
                <artifactId>metaobjects-maven-plugin</artifactId>
                <version>${project.version}</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <!-- Specify the Mojo parameter -->
                    <loader>
                        <classname>com.draagon.meta.loader.simple.SimpleLoader</classname>
                        <name>${project.artifactId}</name>
                        <sourceDir>${project.basedir}/src/test/resources</sourceDir>
                        <sources>
                            <source>metadata/test/produce/v1/common/meta.common.xml</source>
                            <!--source>metadata/test/produce/v1/fruit/meta.fruit.xml</source>
                            <source>metadata/test/produce/v1/vegetable/meta.vegetable.xml</source>
                            <source>metadata/test/produce/v1/container/meta.basket.xm</source-->
                        </sources>
                    </loader>
                    <globals>
                        <output>target/generated-sources</output>
                    </globals>
                    <generators>
                        <generator>
                            <classname>com.draagon.meta.generator.direct.xsd.MetaDataXSDGenerator</classname>
                            <args>
                                <nameSpace>https://draagon.com/schema/simple/types</nameSpace>
                                <outputDir>${project.build.directory}xsd</outputDir>
                                <outputFilename>simple-types.xsd</outputFilename>
                            </args>
                            <filters>
                                <filter>produce::v1::*</filter>
                            </filters>
                        </generator>
                    </generators>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>com.draagon</groupId>
            <artifactId>metaobjects-metadata</artifactId>
            <version>4.3.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
                    
</project>
