<?xml version="1.0" encoding="ISO-8859-1" ?>

<metadata package="produce::v1::container">

    <!-- Basket -->
    <object name="Basket" type="value">

        <objectKey/>

        <!-- Id -->
        <field name="id" super="..::common::id"/>

        <!-- Name -->
        <field name="name" super="..::common::name"/>

        <!-- Number of apples -->
        <field name="numApples" type="int">
            <validator type="length" min="0" max="10"/>
        </field>

        <!-- Number of oranges -->
        <field name="numOranges" type="int">
            <validator type="length" min="0" max="10"/>
        </field>

        <!-- Number of oranges -->
        <field name="numVeggies" type="int">
            <validator type="length" min="0" max="5"/>
        </field>

        <!-- Apples -->
        <field name="apples" type="objectArray" objectRef="..::fruit::Apple">
            <objectRef type="oneToMany" reference="..::fruit::Apple"/>
        </field>

        <!-- Oranges -->
        <field name="oranges" type="objectArray" objectRef="..::fruit::Orange">
            <objectRef type="oneToMany" reference="..::fruit::Orange"/>
        </field>

        <!-- Veggies -->
        <field name="veggies" type="objectArray">
            <objectRef type="oneToMany" reference="..::vegetable::Vegetable"/>
        </field>

    </object>

    <!-- Add an overlay for the basket for all fruit -->
    <object package="..::fruit" name="Fruit">
        <objectKey/>
        <field name="inBasket" type="boolean"/>
    </object>

</metadata>
