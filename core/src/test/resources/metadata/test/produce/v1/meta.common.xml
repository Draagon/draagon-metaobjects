<metadata
        xmlns="https://draagon.com/schema/metamodel/simple"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="https://draagon.com/schema/metamodel/simple metaobjects-model.xsd"
        package="produce::v1::common">

    <attr name="farmName">Big Bob's Farm</attr>

    <!-- Id -->
    <field name="id" type="long">
        <attr type="boolean" name="isKey">true</attr>
    </field>

    <!-- Name -->
    <field name="name" type="string">
        <validator type="required"/>
        <validator type="length">
            <attr type="int" name="min">1</attr>
            <attr name="max">50</attr>
        </validator>
    </field>

</metadata>
