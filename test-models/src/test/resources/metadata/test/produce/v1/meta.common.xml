<metadata package="produce::v1::common">

    <!-- Id -->
    <field name="id" type="long">
        <attr type="boolean" name="isKey">true</attr>
    </field>

    <!-- Name -->
    <field name="name" type="string">
        <validator name="required" type="required"/>
        <validator name="length" type="length">
            <attr type="int" name="max">50</attr>
            <attr type="int" name="min">1</attr>
        </validator>
    </field>

</metadata>
