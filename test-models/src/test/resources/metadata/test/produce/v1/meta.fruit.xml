<?xml version="1.0" encoding="ISO-8859-1" ?>

<metadata package="produce::v1::fruit">

    <!-- Fruit -->
    <object name="Fruit" type="pojo" _isAbstract="true">

        <attr name="object">com.draagon.meta.test.Fruit</attr>

        <!-- Id -->
        <field name="id" super="..::common::id"/>

        <!-- Name -->
        <field name="name" super="..::common::name"/>

        <!-- Length -->
        <field name="length" type="int"/>

        <!-- Weight -->
        <field name="weight" type="int"/>
     
    </object>

    <!-- Fruit -->
    <object name="Vegetable" type="pojo" _isAbstract="true">

        <attr name="object">com.draagon.meta.test.Vegetable</attr>

        <!-- Id -->
        <field name="id" super="..::common::id"/>

        <!-- Name -->
        <field name="name" super="..::common::name"/>

        <!-- Length -->
        <field name="length" type="int"/>

        <!-- Weight -->
        <field name="weight" type="int"/>

    </object>

    <!-- Apple -->
    <object name="Apple" super="Fruit">

        <objectKey name="key"/>

        <attr name="object">com.draagon.meta.test.Apple</attr>
    
        <!-- Orachard -->
        <field name="orchard" type="string">
            <attr type="int" name="len">80</attr>
        </field>

        <!-- Worms -->
        <field name="worms" type="short"/>
      
    </object>  

    <!-- Macintosh -->
    <object name="Macintosh" super="Apple">

        <objectKey name="key"/>

        <attr name="object">com.draagon.meta.test.Macintosh</attr>

    </object>

    <!-- Macintosh -->
    <object name="Tomato" super="Vegetable">

        <objectKey name="key"/>

        <attr name="object">com.draagon.meta.test.Tomato</attr>

    </object>

    <!-- Orange -->
    <object name="Orange" super="Fruit">

        <objectKey name="key"/>

        <attr name="object">com.draagon.meta.test.Orange</attr>

        <field name="pickedDate" type="date"/>
           
    </object>

</metadata>
