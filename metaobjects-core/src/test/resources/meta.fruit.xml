<?xml version="1.0" encoding="ISO-8859-1" ?>

<metadata package="produce">

    <!-- Id -->
    <field name="id" type="long" isKey="true"/>
    
    <!-- Fruit -->
    <object name="Fruit" type="pojo">
    
      <attr name="object">com.draagon.meta.test.Fruit</attr>
      
      <!-- Id -->
      <field name="id" super="id"/>
      
      <!-- Name -->
      <field name="name" type="string">
        <attr name="len">50</attr>
      </field>
      
      <!-- Length -->
      <field name="length" type="int"/>

      <!-- Weight -->
      <field name="weight" type="int"/>
     
    </object>  

    <!-- Apple -->
    <object name="Apple" super="Fruit">
    
      <attr name="object">com.draagon.meta.test.Apple</attr>
    
      <!-- Orachard -->
      <field name="orhcard" type="string">
        <attr name="len">80</attr>
      </field>
     
      <!-- Worms -->
      <field name="worms" type="short"/>
      
    </object>  

    <!-- Orange -->
    <object name="Orange" super="Fruit">
    
      <attr name="object">com.draagon.meta.test.Orange</attr>
      
      <!-- Id -->
      <field name="id">
          <attr name="isKey">false</attr>
      </field>      
    
      <!-- Picked Date -->
      <field name="pickedDate" type="date"/>
           
    </object>
    
    <!-- Basket -->
    <object name="Basket" type="value" package="container">
          
      <!-- Id -->
      <field name="id" type="long">
          <attr name="isKey">true</attr>
      </field>      
    
      <!-- Number of apples -->
      <field name="apples" type="int"/>
    
      <!-- Number of oranges -->
      <field name="oranges" type="int"/>
           
    </object>
 
</metadata>
