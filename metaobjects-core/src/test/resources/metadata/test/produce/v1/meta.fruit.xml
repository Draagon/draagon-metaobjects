<?xml version="1.0" encoding="ISO-8859-1" ?>

<metadata package="produce::v1::fruit">

    <!-- Fruit -->
    <object name="Fruit" type="pojo">
    
      <attr name="object">com.draagon.meta.test.Fruit</attr>
      
      <!-- Id -->
      <field name="id" super="..::common::id"/>
      
      <!-- Name -->
      <field name="name" super="..::common::name"/>
      
      <!-- Length -->
      <field name="length" type="int"/>

      <!-- Weight -->
      <field name="weight" type="int"/>
     
    </object>  

    <!-- Apple -->
    <object name="Apple" super="Fruit">
    
      <attr name="object">com.draagon.meta.test.Apple</attr>
    
      <!-- Orachard -->
      <field name="orhcard" type="string">
        <attr name="len">80</attr>
      </field>
     
      <!-- Worms -->
      <field name="worms" type="short"/>
      
    </object>  

    <!-- Macintosh -->
    <object name="Macintosh" super="Apple">

        <attr name="object">com.draagon.meta.test.Macintosh</attr>

    </object>

    <!-- Orange -->
    <object name="Orange" super="Fruit">
    
      <attr name="object">com.draagon.meta.test.Orange</attr>

      <!-- Picked Date -->
      <field name="pickedDate" type="date"/>
           
    </object>

</metadata>
