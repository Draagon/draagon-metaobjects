{"metadata": {"package": "acme",
  "children": [
    {"object": {"package": "::garage", "name": "Garage", "@object": "com.acme.garage.Garage",
        "children": [
          {"field": {"name": "id", "super": "..::common::id"}},
          {"field": {"name": "name", "super": "..::common::name"}},
          {"field": {"name": "address", "@required": "true", "@maxLength": "200"}},
          {"field": {"name": "capacity", "type": "int", "@required": "true",
              "children": [
                {"validator": {"name": "positive", "super": "..::common::positiveRange"}},
                {"view": {"name": "slider", "type": "slider", "@min": "1", "@max": "50", "@step": "1",
                    "children": [{"validator": {"name": "sliderRange", "type": "range", "@min": "1", "@max": "50"}}]
                  }
                }
              ]
            }
          }
        ]
      }
    },
    {"object": {"package": "::vehicle", "name": "Vehicle", "@isAbstract": "true", "@object": "com.acme.vehicle.Vehicle",
        "children": [
          {"field": {"name": "id", "super": "..::common::id"}},
          {"field": {"name": "name", "super": "..::common::name"}},
          {"field": {"name": "description", "super": "..::common::description"}},
          {"field": {"name": "year", "type": "int", "@required": "true",
              "children": [
                {"validator": {"name": "yearRange", "type": "range", "@min": "1900", "@max": "2030"}},
                {"view": {"name": "yearPicker", "type": "numeric", "@min": "1900", "@max": "2030"}}
              ]
            }
          },
          {"field": {"name": "price", "type": "double", "@required": "true",
              "children": [
                {"validator": {"name": "priceValidator", "super": "..::common::priceRange"}},
                {"view": {"name": "currency", "type": "currency", "@currency": "USD", "@precision": "2"}}
              ]
            }
          },
          {"field": {"name": "garageId", "type": "long", "@required": "true"}}
        ]
      }
    },
    {"object": {"package": "::vehicle::car", "name": "Car", "super": "..::Vehicle", "@object": "com.acme.vehicle.car.Car",
        "children": [
          {"field": {"name": "doors", "type": "int", "@required": "true",
              "children": [{"validator": {"name": "doorRange", "type": "range", "@min": "2", "@max": "6"}}]
            }
          },
          {"field": {"name": "transmission", "@required": "true", "@maxLength": "20"}},
          {"field": {"name": "fuelType", "@required": "true",
              "children": [{"validator": {"name": "fuelOptions", "type": "options", "@values": "gas,diesel,electric,hybrid"}}]
            }
          }
        ]
      }
    },
    {"object": {"package": "::vehicle::truck", "name": "Truck", "super": "..::Vehicle", "@object": "com.acme.vehicle.truck.Truck",
        "children": [
          {"field": {"name": "payloadCapacity", "type": "double", "@required": "true",
              "children": [{"validator": {"name": "positive", "super": "..::..::common::positiveRange"}}]
            }
          },
          {"field": {"name": "bedLength", "type": "double", "@required": "true",
              "children": [{"validator": {"name": "bedRange", "type": "range", "@min": "3.0", "@max": "12.0"}}]
            }
          }
        ]
      }
    },
    {"object": {"package": "::vehicle::motorcycle", "name": "Motorcycle", "super": "..::Vehicle", "@object": "com.acme.vehicle.motorcycle.Motorcycle",
        "children": [
          {"field": {"name": "engineSize", "type": "int", "@required": "true",
              "children": [{"validator": {"name": "engineRange", "type": "range", "@min": "50", "@max": "2000"}}]
            }
          },
          {"field": {"name": "bikeType",
              "children": [{"validator": {"name": "typeOptions", "type": "options", "@values": "cruiser,sport,touring,standard,dirt"}}]
            }
          }
        ]
      }
    },
    {"object": {"package": "::vehicle::car::luxury", "name": "Porsche", "super": "..::Car", "@object": "com.acme.vehicle.car.luxury.Porsche",
        "children": [
          {"field": {"name": "model", "@required": "true", "@maxLength": "30"}},
          {"field": {"name": "topSpeed", "type": "int", "@required": "true",
              "children": [{"validator": {"name": "speedRange", "type": "range", "@min": "100", "@max": "400"}}]
            }
          },
          {"field": {"name": "series",
              "children": [{"validator": {"name": "seriesOptions", "type": "options", "@values": "911,Cayenne,Panamera,Macan,Taycan"}}]
            }
          }
        ]
      }
    }
  ]
}}