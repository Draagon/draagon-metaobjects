{"$schema": "simple-model.schema.json",
 "metadata": {"package": "simple::fruitbasket",
  "children": [

    {"field": {"package": "simple::common", "name": "id", "type": "long", "@isAbstract": true,
      "children": [
        {"attr": {"name": "isKey", "type": "boolean", "value": "true"}}
      ]}},

    {"field": {"package": "simple::common", "name": "name", "type": "string", "@isAbstract": true,
      "children": [
        {"validator": {"type": "required"}},
        {"validator": {"type": "length", "@min": 1, "@max": 50}}
      ]}},

    {"object": {"name": "Basket", "type": "proxy", "@object": "com.draagon.meta.test.proxy.fruitbasket.Basket",
      "children": [
        {"key": {"name": "primary", "type": "primary", "@keys": "id"}},
        {"field": {"name": "id", "super": "..::common::id"}},
        {"field": {"name": "name", "super": "..::common::name"}},
        {"field": {"name": "numApples", "type": "int",
          "children": [
            {"validator": {"type": "length", "@min": 0, "@max": 10}}
          ]}},
        {"field": {"name": "numOranges", "type": "int",
          "children": [
            {"validator": {"type": "length", "@min": 0, "@max": 10}}
          ]}},
        {"field": {"name": "fruitIds", "type": "objectArray", "@objectRef": "::Apple"}},
        {"field": {"name": "apples", "type": "objectArray", "@objectRef": "::Apple"}},
        {"field": {"name": "oranges", "type": "objectArray", "@objectRef": "::Orange"}}
      ]}},

    {"object": {"name": "BasketToFruit", "type": "proxy", "@object": "com.draagon.meta.test.proxy.fruitbasket.BasketToFruit",
      "children": [
        {"key": {"name": "primary", "type": "primary", "@keys": "basketId,fruitId"}},
        {"key": {"type": "foreign", "name": "basketKey", "@keys": "basketId", "@foreignObjectRef": "::Basket"}},
        {"key": {"type": "foreign", "name": "fruitKey", "@keys": "fruitId", "@foreignObjectRef": "::Fruit"}},
        {"field": {"name": "basketId", "super": "..::common::id"}},
        {"field": {"name": "fruitId", "super": "..::common::id"}}
      ]}},

    {"object": {"name": "Fruit", "type": "proxy", "@isAbstract": true, "@object": "com.draagon.meta.test.proxy.fruitbasket.Fruit",
      "children": [
        {"key": {"name": "primary", "type": "primary", "@keys": "id"}},
        {"key": {"type": "foreign", "name": "basketKey", "@keys": "basketId", "@foreignObjectRef": "::Basket"}},
        {"field": {"name": "id", "super": "..::common::id"}},
        {"field": {"name": "name", "super": "..::common::name"}},
        {"field": {"name": "basketId", "super": "..::common::id"}},
        {"field": {"name": "length", "type": "int"}},
        {"field": {"name": "weight", "type": "int"}},
        {"field": {"name": "inBasket", "type": "boolean"}}
      ]}},

    {"object": {"name": "Apple", "super": "Fruit", "@object": "com.draagon.meta.test.proxy.fruitbasket.Apple",
      "children": [
        {"field": {"name": "orchard", "type": "string"}},
        {"field": {"name": "worms", "type": "short"}}
      ]}},

    {"object": {"name": "Macintosh", "super": "Apple", "@object": "com.draagon.meta.test.proxy.fruitbasket.Macintosh"}},

    {"object": {"name": "Orange", "super": "Fruit", "@object": "com.draagon.meta.test.proxy.fruitbasket.Orange",
      "children": [
        {"field": {"name": "pickedDate", "type": "date"}}
      ]}}
  ]
}}